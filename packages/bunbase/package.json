{
	"name": "bunbase",
	"version": "1.0.1",
	"description": "Type-safe backend framework for Bun with actions, modules, and triggers",
	"homepage": "https://github.com/alihussnainrb/bunbase#readme",
	"bugs": {
		"url": "https://github.com/alihussnainrb/bunbase/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"bin": {
		"bunbase": "./dist/cli/index.js"
	},
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./cli": "./dist/cli/index.js",
		"./package.json": "./package.json"
	},
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alihussnainrb/bunbase.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"type-check": "tsc --noEmit",
		"release": "bumpp -r --commit --push --tag"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"@types/nodemailer": "^7.0.9",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"typescript": ">=4.5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"type": "module",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.26.0",
		"commander": "^14.0.3",
		"croner": "^10.0.1",
		"is-unicode-supported": "^2.1.0",
		"nodemailer": "^8.0.1",
		"openapi3-ts": "^4.5.0",
		"preact": "^10.28.3",
		"preact-render-to-string": "^6.6.5",
		"typebox": "^1.0.81",
		"zod": "^3.22.4"
	}
}
