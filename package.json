{
	"name": "bunbase-monorepo",
	"homepage": "https://github.com/alihussnainrb/bunbase#readme",
	"bugs": {
		"url": "https://github.com/alihussnainrb/bunbase/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alihussnainrb/bunbase.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp -r --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "bun run --filter '*' type-check"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"bumpp": "^10.4.0",
		"bunup": "^0.16.22",
		"typescript": "^5.9.3"
	},
	"private": true,
	"workspaces": [
		"packages/*",
		"examples/*"
	],
	"type": "module"
}
