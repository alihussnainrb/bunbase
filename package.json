{
	"name": "bunbase-monorepo",
	"homepage": "https://github.com/alihussnainrb/bunbase#readme",
	"bugs": {
		"url": "https://github.com/alihussnainrb/bunbase/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alihussnainrb/bunbase.git"
	},
	"scripts": {
		"build": "bunup",
		"dev": "bunup --watch",
		"docs:dev": "bun run --cwd apps/docs dev",
		"docs:build": "bun run --cwd apps/docs build",
		"docs:start": "bun run --cwd apps/docs start",
		"docs:type-check": "bun run --cwd apps/docs type-check",
		"docs:openapi:pull": "bun run --cwd apps/docs openapi:pull",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"release": "bumpp -r --commit --push --tag",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:watch": "bun test --watch",
		"type-check": "bun run --filter '*' type-check",
		"benchmark": "bun run benchmarks/load-test.ts",
		"benchmark:compare": "bun run benchmarks/compare.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@types/bun": "^1.3.8",
		"@types/qrcode": "^1.5.6",
		"autocannon": "^8.0.0",
		"bumpp": "^10.4.0",
		"bunup": "^0.16.22",
		"typescript": "^5.9.3"
	},
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"examples/*"
	],
	"type": "module",
	"dependencies": {
		"@noble/hashes": "^2.0.1",
		"arctic": "^3.7.0",
		"otpauth": "^9.5.0",
		"qrcode": "^1.5.4"
	}
}
